<Layouts.app flash={@flash} current_scope={@current_scope} is_landing?={is_nil(@current_scope)}>
  <%= if is_nil(@current_scope) do %>
    <Landing.public tournaments={@tournaments} />
  <% else %>
    <Landing.authenticated
      current_scope={@current_scope}
      seasons={@seasons}
      tournaments={@tournaments}
      tournament_submission_enabled?={@tournament_submission_enabled?}
    />
  <% end %>
</Layouts.app>
